<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    app:cardBackgroundColor="#F8F7F7"
    android:layout_margin="2dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/cardview_layout">

    </FrameLayout>

    <ImageView
        android:id="@+id/musim_photo"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="8dp"
        android:src="@drawable/ee" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7AFFFFFF"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/musim_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name : Grand Nile Tower"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#12062B"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

</androidx.cardview.widget.CardView>